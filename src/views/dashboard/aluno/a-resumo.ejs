<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/resumo.css">
    <link rel="stylesheet" href="/css/header2.css">
    <link rel="shortcut icon" href="../../Images/favicon.ico" type="image/x-icon">
    <title>Resumos</title>
</head>
<body>
    <header>
        <a href="/aluno/a-minha-rotina-2"><img src="/images/voltar.svg" alt=""></a>
        <p>MÉTODOS DE ESTUDO</p>
        <div>
          <p><%= user.NOME_USU || 'Aluno' %></p>
          <button class="user-icon" id="userIcon" aria-label="Abrir menu do usuário">
              <img src="/aluno/foto-perfil/<%= user.ID_USUARIO %>?v=<%= timestamp %>" alt="imagem do perfil" style="width: 48px; height: 48px; object-fit: cover; border-radius: 50%; border: 2px solid #ccc;" />
              <div class="user-config" id="userConfig">
                  <ul>
                      <li><a href="/aluno/a-perfil">MENU</a></li>
                      <li><a href="/aluno/a-config">CONFIGURAÇÕES</a></li>
                      <li><a href="/aluno/logout">SAIR</a></li>
                  </ul>
              </div>
          </button>
      </div>
    </header>
    <h1>RESUMOS</h1>
    <main class="container">
        <section class="resumo">
            <form action="/aluno/a-resumo" method="POST">
                <section class="controlador">
                    <section class="info-resumo">
                        <h2 class="subtitle">TÍTULO</h2>
                        <input 
                            type="text" 
                            name="titulo" 
                            class="descricao" 
                            placeholder="Escreva o título..."
                            value="<%= resumo ? resumo.TITULO : '' %>"
                        >
                    </section>
                    <section class="info-resumo">
                        <h2 class="subtitle">CATEGORIA</h2>
                        <input 
                            type="text" 
                            name="categoria" 
                            class="descricao" 
                            placeholder="Escreva o nome da categoria..." 
                            value="<%= resumo ? resumo.CATEGORIA : '' %>"
                        >
                    </section>
                </section>
                <section class="caixa-de-texto">
                    <textarea
                        id="mensagem"
                        name="texto_resumo"
                        rows="15"
                        cols="90"
                        placeholder="Escreva o seu resumo aqui..."
                    ><%= resumo ? resumo.TEXTO_RESUMO : '' %></textarea>
                    <% if (resumo && resumo.COD_RESUMO) { %>
                        <input type="hidden" name="cod_resumo" value="<%= resumo.COD_RESUMO %>">
                    <% } %>
                </section>
                <section class="btns-salvar-deletar">
                    <button type="submit" class="save-button">SALVAR <img src="/images/salvar.svg" alt=""></button>
                    <% if (resumo) { %>
                        <button type="submit" formaction="/aluno/a-resumos/<%= resumo.COD_RESUMO %>/delete" formmethod="POST" class="delete-button"><img src="/images/delete.svg" alt=""></button>
                    <% } %>
                </section>
            </form>
        </section>
    </main>
    <script src="/js/icon-menu.js"></script>  
</body>
</html>