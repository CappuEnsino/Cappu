<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CRIAR EXERCÍCIO</title>
    <link rel="stylesheet" href="/css/p_criar_exercicio.css" />
    <link rel="stylesheet" href="/css/header2.css" />
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon" />
  </head>
  <body>
    <header>
      <a href="/professor/p-curso_prof"><img src="/images/voltar.svg" alt=""></a>
      <p>CRIAR EXERCÍCIO</p>
      <section>
        <p><%= user.NOME_USU || 'Professor' %></p>
        <button class="user-icon" id="userIcon" aria-label="Abrir menu do usuário">
            <img id="header-profile-img" src="/professor/foto-perfil/<%= user.ID_USUARIO %>?v=<%= timestamp %>" alt="imagem do perfil"
            style="width: 48px; height: 48px; object-fit: cover; border-radius: 50%; border: 2px solid #ccc"
            onerror="this.onerror=null; this.src='/images/perfil.svg';"/>
            <section class="user-config" id="userConfig">
              <h2><%= user.NOME_USU || 'Professor' %></h2>
                <ul>
                    <li><a href="/professor/p-professor">MENU</a></li>
                    <li><a href="/professor/p-config">CONFIGURAÇÕES</a></li>
                    <li><a href="/professor/logout">SAIR</a></li>
                </ul>
            </section>
        </button>
    </section>
    </header>

    <section class="container">
      <form action="./p-criar_exer">
        <input type="hidden" name="curso_id" />
        <input type="hidden" name="aula_id" />

        <section class="left">
          <h1>DETALHES DO EXERCÍCIO</h1>

          <section class="form-group">
            <label for="enunciado">ENUNCIADO</label>
            <textarea id="enunciado" name="enunciado" required></textarea>
          </section>

          <section class="form-group">
            <label for="alternativas">ALTERNATIVAS</label>
            <section class="alternativas-container">
              <section class="alternativa">
                <input type="radio" name="correta" value="" />
                <input
                  type="text"
                  name="alternativas[]"
                  placeholder="Alternativa "
                  required
                />
              </section>
            </section>
          </section>

          <section class="form-group">
            <label for="explicacao">EXPLICAÇÃO</label>
            <textarea id="explicacao" name="explicacao"></textarea>
          </section>
        </section>

        <section class="right">
          <h1>MATERIAIS</h1>
          <section class="materiais">
            <section class="material">
              <h3>material nome</h3>
              <p>material tipo</p>
              <section class="acoes">
                <a href="">
                  <img src="/images/icon_pesquisa.png" alt="Visualizar" />
                </a>
                <a href="/dashboard/professor/exercicio">
                  <img src="/images/icon_delete.png" alt="Excluir" />
                </a>
              </section>
            </section>
          </section>
          <section class="add-material">
            <a href="/dashboard/professor/exercicio">
              <img src="/images/icon_mais.png" alt="Adicionar material" />
            </a>
          </section>
        </section>

        <section class="form-group">
          <label for="materiais">MATERIAIS DE APOIO</label>
          <section class="materiais-container">
            <table>
              <thead>
                <tr>
                  <th>TÍTULO</th>
                  <th>TIPO</th>
                  <th>AÇÕES</th>
                </tr>
              </thead>
              <tbody id="materiaisTable">
                <tr>
                  <td>
                    <input
                      type="text"
                      name="materiais[0][titulo]"
                      placeholder="Título"
                      required
                    />
                  </td>
                  <td>
                    <select name="materiais[0][tipo]" required>
                      <option value="">Selecione...</option>
                      <option value="video">Vídeo</option>
                      <option value="texto">Texto</option>
                      <option value="link">Link</option>
                    </select>
                  </td>
                  <td>
                    <button type="button" class="remover-material">
                      Remover
                    </button>
                  </td>
                </tr>
              </tbody>
            </table>
            <button type="button" id="adicionarMaterial">
              Adicionar Material
            </button>
          </section>
        </section>

        <button type="submit" class="salvar">
          SALVAR <img src="/images/save_gere.png" alt="Salvar" />
        </button>
      </form>
    </section>

    <script src="/js/icon-menu.js"></script>
    <script src="/js/criar_exercicio.js"></script>
  </body>
</html>
