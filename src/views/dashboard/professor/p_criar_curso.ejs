<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CRIAR CURSO</title>
    <link rel="stylesheet" href="/css/criar_curso.css" />
    <link rel="stylesheet" href="/css/header2.css" />
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/simple-notify/dist/simple-notify.min.css"
    />
    <link rel="stylesheet" href="/css/modal.css">
  </head>
  <body>
    <header>
      <a href="/professor/p-curso_prof"><img src="/images/voltar.svg" alt=""></a>
      <p>Criar Curso</p>
      <section>
        <p><%= user.NOME_USU || 'Professor' %></p>
        <button class="user-icon" id="userIcon" aria-label="Abrir menu do usuário">
            <img id="header-profile-img" src="/professor/foto-perfil/<%= user.ID_USUARIO %>?v=<%= timestamp %>" alt="imagem do perfil"
            style="width: 48px; height: 48px; object-fit: cover; border-radius: 50%; border: 2px solid #ccc"
            onerror="this.onerror=null; this.src='/images/perfil.svg';"/>
            <section class="user-config" id="userConfig">
                <h2><%= user.NOME_USU || 'Professor' %></h2>
                <ul>
                    <li><a href="/professor/p-professor">MENU</a></li>
                    <li><a href="/professor/p-config">CONFIGURAÇÕES</a></li>
                    <li><a href="/professor/logout">SAIR</a></li>
                </ul>
            </section>
        </button>
    </section>
    </header>

    <main class="container">
      <form
        id="formCriarCurso"
        action="/dashboard/professor/p_criar_curso"
        method="POST"
      >
        <section class="left">
          <h1>Criar Curso</h1>

          <section class="form-group">
            <label for="titulo">Nome do curso</label>
            <input
              type="text"
              id="titulo"
              name="titulo"
              placeholder="Adicione um nome..."
              required
            />
          </section>

          <section class="form-group">
            <label for="descricao">DESCRIÇÃO</label>
            <textarea
              id="descricao"
              name="descricao"
              placeholder="Adicione uma descrição..."
              required
            ></textarea>
          </section>

          <section class="form-group">
            <label for="categoria">CATEGORIA</label>
            <select id="categoria" name="categoria" required>
              <option value="" disabled selected>
                Selecione uma categoria
              </option>
              <% if (categorias && categorias.length > 0) { %> <%
              categorias.forEach(function(cat) { %>
              <option value="<%= cat.ID_CATEGORIA %>"><%= cat.NOME %></option>
              <% }); %> <% } else { %>
              <option value="">Nenhuma categoria cadastrada</option>
              <% } %>
            </select>
          </section>

          <section class="form-group">
            <label for="preco">PREÇO</label>
            <input
              type="number"
              id="preco"
              name="preco"
              step="0.01"
              min="0"
              placeholder="Ex: 99.90"
              required
            />
          </section>

          <section class="form-group">
            <label for="duracao_total">DURAÇÃO TOTAL (horas)</label>
            <input
              type="number"
              id="duracao_total"
              name="duracao_total"
              step="0.1"
              min="0"
              placeholder="Ex: 10.5"
              required
            />
          </section>

          <section class="form-group">
            <label for="objetivos">OBJETIVOS</label>
            <textarea
              id="objetivos"
              name="objetivos"
              placeholder="Descreva os objetivos do curso..."
              required
            ></textarea>
          </section>
          <section class="form-group">
            <label for="imagem" class="custom-label">IMAGEM DE CAPA</label>
            <input
              type="file"
              id="imagem"
              name="imagem"
              accept="image/*"
              class="form-control"
              style="display: none;"
            />
            <br>
            <img id="preview" src="#" alt="Pré-visualização">
            <small class="form-text text-muted"
              >Formatos aceitos: JPG, PNG, GIF. Tamanho máximo: 5MB</small
            >
          </section>
        </section>
        <section class="right">
          <h1>ADICIONAR MÓDULOS</h1>
          <section id="modulosContainer"></section>
          <button type="button" id="addModuloBtn" style="margin-top: 10px">
            Adicionar módulo
          </button>
        </section>
        <input type="hidden" name="modulos" id="modulosInput" />

        <button type="submit" class="salvar">
          SALVAR <img src="../../images/salvar.svg" alt="Salvar" />
        </button>
      </form>
    </main>

    <script src="/js/icon-menu.js"></script>
    <script src="/js/curso.js"></script>
    <script src="/js/modal.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-notify/dist/simple-notify.min.js"></script>

    <!-- Modal para adicionar/editar aula -->
    <section class="modal" id="aulaModal">
      <section class="modal-container">
        <section class="modal-content">
          <section class="modal-header">
            <h5 class="modal-title" id="aulaModalLabel">Nova Aula</h5>
            <button type="button" class="close-button" aria-label="Fechar">×</button>
          </section>
          <form id="aulaForm" onsubmit="CursoManager.saveAulaFromModal(event);">
            <section class="modal-body">
              <section class="form-group">
                <label for="titulo" class="form-label">Título da Aula <span class="required">*</span></label>
                <input type="text" class="input-field" id="titulo" name="titulo" required />
              </section>
              <section class="form-group">
                <label for="descricao" class="form-label">Descrição</label>
                <textarea class="input-field" id="descricao" name="descricao" rows="3"></textarea>
              </section>
              <section class="form-group">
                <label for="tipo_conteudo" class="form-label">Tipo de Conteúdo</label>
                <select class="input-field" id="tipo_conteudo" name="tipo_conteudo" onchange="CursoManager.toggleVideoFields()">
                  <option value="video">Vídeo</option>
                  <option value="texto">Texto</option>
                </select>
              </section>
              <section id="videoUrlGroup">
                <section class="form-group">
                  <label for="video_url" class="form-label">URL do Vídeo (Youtube/Vimeo)</label>
                  <input type="url" class="input-field" id="video_url" name="video_url" placeholder="https://www.youtube.com/watch?v=..." />
                  <section class="form-hint">Insira a URL completa do vídeo</section>
                </section>
                <section class="form-group">
                  <label for="video_arquivo" class="custom-label">Ou envie um arquivo de vídeo</label>
                  <input type="file" class="input-field" id="video_arquivo" name="video_arquivo" accept="video/*" style="display: none;" />
                  <br>
                  <video id="previewVideo" controls style="display: none;" class="video-preview"></video>
                  <section class="form-hint">Formatos suportados: MP4, WebM, OGG (Máx. 500MB)</section>
                </section>
              </section>
              <section class="form-row">
                <section class="form-col">
                  <section class="form-group">
                    <label for="duracao" class="form-label">Duração (HH:MM:SS) <span class="required">*</span></label>
                    <input type="text" class="input-field" id="duracao" name="duracao" pattern="([01]?[0-9]|2[0-3]):[0-5][0-9]:[0-5][0-9]" placeholder="00:10:00" required />
                    <section class="form-hint">Formato: HH:MM:SS (ex: 00:15:30 para 15 minutos e 30 segundos)</section>
                  </section>
                </section>
                <section class="form-col">
                  <section class="form-group">
                    <label for="ordem" class="form-label">Ordem no Módulo <span class="required">*</span></label>
                    <input type="number" class="input-field" id="ordem" name="ordem" min="1" required />
                    <section class="form-hint">A ordem em que esta aula aparecerá no módulo</section>
                  </section>
                </section>
              </section>
            </section>
            <section class="modal-footer">
              <button type="button" class="btn btn-secondary" onclick="closeModal()">Cancelar</button>
              <button type="submit" class="btn btn-primary">Salvar Aula</button>
            </section>
          </form>
        </section>
      </section>
    </section>
    <script>
      // Inicializa o CursoManager ao carregar a página
      document.addEventListener("DOMContentLoaded", function () {
        if (window.CursoManager) {
          CursoManager.init();
        }
        // Ajusta o submit para enviar os módulos como JSON
        const form = document.getElementById("formCriarCurso");
        if (form) {
          form.onsubmit = function (e) {
            const modulosInput = document.getElementById("modulosInput");
            if (modulosInput && window.CursoManager) {
              modulosInput.value = JSON.stringify(CursoManager.modulos);
            }
          };
        }
      });
    </script>

    <script>
      //Pré-visu da imagem
      document.getElementById('imagem').addEventListener('change', function(event) {
          const file = event.target.files[0];
      
          if (file) {
              const reader = new FileReader();
      
              reader.onload = function(e) {
                  const preview = document.getElementById('preview');
                  preview.src = e.target.result;
                  preview.style.display = 'block';
              };
      
              reader.readAsDataURL(file);
          }
          const preview = document.getElementById('preview');
          preview.src = e.target.result;
          preview.classList.add('show');
      });
    </script>
    <script>
      //Pré-visu do vídeo
      document.getElementById('inputVideo').addEventListener('change', function(event) {
          const file = event.target.files[0];
          const preview = document.getElementById('previewVideo');
      
          if (file) {
              const url = URL.createObjectURL(file);
              preview.src = url;
              preview.classList.add('show');
          }
      });
    </script>      
  </body>
</html>