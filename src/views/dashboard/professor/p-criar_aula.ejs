<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CRIAR AULA</title>
    <link rel="stylesheet" href="/css/criar_aula.css" />
    <link rel="stylesheet" href="/css/header2.css" />
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon" />
  </head>
  <body>
    <header>
      <a href="./p-modulo"
        ><img src="/images/voltar.svg" alt=""
      /></a>
      <p>CRIAR AULA</p>
      <div>
        <p><%= user.NOME_USU || 'Professor' %></p>
        <button
          class="user-icon"
          id="userIcon"
          aria-label="Abrir menu do usuário"
        >
          <img src="/images/perfil.svg" alt="imagem do perfil" />
          <div class="user-config" id="userConfig">
            <ul>
              <li><a href="./p-professor">MENU</a></li>
              <li><a href="./p-config">CONFIGURAÇÕES</a></li>
              <li><a href="/aluno/logout">SAIR</a></li>
            </ul>
          </div>
        </button>
      </div>
    </header>

    <div class="container">
      <form action="/dashboard/professor/p-criar_aula" method="POST" enctype="multipart/form-data">
        <input type="hidden" name="modulo_id" value="<%= moduloId %>" />

        <div class="left">
          <h1>DETALHES DA AULA</h1>

          <div class="form-group">
            <label for="titulo">TÍTULO</label>
            <input
              type="text"
              id="titulo"
              name="titulo"
              required
            />
          </div>

          <div class="form-group">
            <label for="descricao">DESCRIÇÃO</label>
            <textarea id="descricao" name="descricao" required></textarea
            >
          </div>

          <div class="form-group">
            <label for="video">VÍDEO</label>
            <div class="video-preview">
              <video controls></video>
              <img src="/images/video_placeholder.png" alt="Preview do vídeo" />
              
              <input type="file" id="video" name="video" accept="video/*" />
            </div>
          </div>
        </div>

        <div class="right">
          <h1>MATERIAIS</h1>
          <div class="materiais">
           
            <div class="material">
              <h3>material titulo</h3>
              <p>material tipo</p>
              <div class="acoes">
                <a href="material url" target="_blank">
                  <img src="/images/icon_pesquisa.png" alt="Visualizar" />
                </a>
                <a
                  href="/dashboard/professor/material"
                >
                  <img src="/images/icon_delete.png" alt="Excluir" />
                </a>
              </div>
            </div>
       
          </div>
          <div class="add-material">
            <a
              href="/dashboard/professor/material/new"
            >
              <img src="/images/icon_mais.png" alt="Adicionar material" />
            </a>
          </div>
        </div>

        <button type="submit" class="salvar">
          SALVAR <img src="/images/save_gere.png" alt="Salvar" />
        </button>
      </form>
    </div>

    <script src="/js/icon-menu.js"></script>
    <script src="/js/aula.js"></script>
  </body>
</html>
